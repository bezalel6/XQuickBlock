{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "XQuickBlock",
  "version": "1.0.0",
  "description": "Quickly mute or block users on X (Twitter) with a single click",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "popup.html",
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "js/content_script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/lit.js"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ]
    }
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon128.png"
  }
}