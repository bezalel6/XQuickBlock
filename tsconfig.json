{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "bundler",
        "module": "ES6",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
        ]
    }
}